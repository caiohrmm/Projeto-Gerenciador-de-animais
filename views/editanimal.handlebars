<div class="box-formulario">
  <div class="formulario">
    <div class="title-form">
      <h1>Edite um animal</h1>
      {{#with animal}}
    </div>
    <form action="editing/{{idanimal}}" method="post">
      <span>
        <input
          type="text"
          class="input-slide"
          name="animalname"
          placeholder="Animal"
          autocomplete="off"
          required=""
          value="{{animalname}}"
        />
        <label for="animalname"></label>
      </span>
      <span>
        <input
          type="text"
          class="input-slide"
          name="raceanimal"
          placeholder="Raça"
          autocomplete="off"
          required=""
          value="{{race}}"

        />
        <label for="raceanimal"> </label>
      </span>
      <span>
        <input
          type="text"
          class="input-slide"
          name="ownername"
          placeholder="Proprietário do animal"
          autocomplete="off"
          required=""
          value="{{ownername}}"
        />
        <label for="ownername"> </label>
      </span>
      <span>
        <input
          type="text"
          class="textarea"
          name="description"
          value="{{descri}}"
          placeholder="Descrição do animal"
        />
        <label for="description"> </label>
      </span>
      {{/with}}
      <div class="box-btn">

        <button type="submit" class="btn-envia zoom-shadow">
          Editar animal
        </button>
      </div>
    </form>
  </div>
</div><!--Box Formulario-->